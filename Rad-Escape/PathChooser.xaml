<UserControl x:Class="Rad_Escape.PathChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Rad_Escape"
             mc:Ignorable="d"
             x:Name="PathAndButtonUserControl"
             Height="Auto" Width="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="PathBox" Grid.Column="0" VerticalAlignment="Center" IsEnabled="False" Margin="10" />
        <Button x:Name="Button" Grid.Column="1" VerticalAlignment="Center" Content="" Margin="10" Click="Button_Click" />
    </Grid>
</UserControl>