<Page x:Class="Rad_Escape.CompletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Rad_Escape"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="Page1">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0">
            <Label x:Name="TopMessage" Foreground="White" HorizontalAlignment="Center" />
        </Viewbox>
        <Viewbox Grid.Row="1">
            <Label x:Name="AboveTimeMessage" Foreground="White" HorizontalAlignment="Center" />
        </Viewbox>
        <Viewbox Grid.Row="2">
            <Label x:Name="TimeMessage" Foreground="White" HorizontalAlignment="Center" />
        </Viewbox>
        <Viewbox Grid.Row="3">
            <Label x:Name="BottomMessage" Foreground="White" HorizontalAlignment="Center" />
        </Viewbox>
    </Grid>
</Page>